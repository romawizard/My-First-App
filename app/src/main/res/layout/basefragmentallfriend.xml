<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/line_batton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/button_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_celected"
            android:textOn="@string/friend"
            android:textOff="@string/friend"
            android:textStyle="bold"
            android:textColor="@drawable/text_selected"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/button_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_celected"
            android:textOff="@string/online"
            android:textOn="@string/online"
            android:textStyle="bold"
            android:textColor="@drawable/text_selected"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/button_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@drawable/text_selected"
            android:textOn="@string/contact"
            android:textOff="@string/contact"
            android:textStyle="bold"
            android:background="@drawable/bottom_celected"
            android:layout_weight="1"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
